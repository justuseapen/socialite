<%= render "marketing/value_prop" %>
<div class="row">
	<div class="col-sm-8 col-md-4 col-md-offset-2">
		<h2>Sign up or <%= link_to "Sign in", new_session_path(resource_name) %></h2>
		<%= devise_error_messages! %>

		<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

		  <div class="col-4-md">
		    <%= f.input :email, :required => true, :autofocus => true, label: false, placeholder: "YourEmail@here.com", wrapper: :vertical_input_group  %>
		    <%= f.input :password, :required => true, label: false, placeholder: "ReallySmartPasswordHere", wrapper: :vertical_input_group %>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "Next" %>
		  </div>

		<% end %>
	</div>
</div>