<div class="col-md-offset-1 col-md-10">

	<h1>Lists</h1>
	<div class="well">
		<table class="table">
			<thead>
				<th>List Name</th>
				<th># of Accounts</th>
				<th>Buffer Profile</th>
				<th>Delete</th>
			</thead>
			<% @lists.each do |list| %>
				<tr>
					<td><%= link_to list.name, list_path(list) %></td>
					<td><%= list.twitter_accounts.count %></td>
					<td><%= list.buffer_profile.formatted_username unless nil %></td>
					<td>
						<%= link_to fa_icon("times"), list, method: :delete %>
					</td>
				</tr>
			<% end %>
		</table>
		<%= link_to 'New List', new_list_path, class: "btn btn-default" %>
	</div>
	<h1>Profiles</h1>
	<div class="well">
		<% if @buffer_profiles.blank? %>
			<p>You need to add a buffer profile.</p>
		<% else %>
			<% @buffer_profiles.each do |p| %>
				<%= p.formatted_username unless nil %>
			<% end %>
		<% end %>
		<%= link_to 'Add Profiles', new_buffer_profiles_path, class: "btn btn-default" %>
	</div>
</div>