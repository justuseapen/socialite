<%= render "marketing/value_prop" %>
<div class="row">
	<div class="col-sm-8 col-md-4 col-md-offset-2">

		<h2>Sign in</h2>

		<%= simple_form_for(@user, :as => @user, :url => session_path(@user)) do |f| %>
		  <div class="form-inputs">
		    <%= f.input :email, :required => false, :autofocus => true, placeholder: "YourEmail@here.com", wrapper: :vertical_input_group  %>
		    <%= f.input :password, :required => false, placeholder: "ReallySmartPasswordHere", wrapper: :vertical_input_group %>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "Sign in" %>
		  </div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>